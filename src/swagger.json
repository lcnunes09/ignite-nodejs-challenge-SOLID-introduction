
{
    "openapi": "3.0.0",
    "info": {
      "title": "User Account API",
      "description": "User account API.",
      "contact": {
        "email": "lcnunes09@gmail.com"
      },
      "version": "1.0.0"
    },
    "paths": {
      "/users": {
        "post": {
            "tags": ["Users"],
            "summary": "Create User",
            "description": "Creates a new user, not Admin as default.",
            "requestBody": {
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/body"
                  }
                }
              },
              "required": true
            },
            "responses": {
              "200": {
                "description": "Created"
              },
              "400": {
                "description": "Bad params"
              }
            }
          },
        "get": {
          "tags": ["Users"],
          "summary": "List all Users",
          "description": "List all users in case the requested user has an Admin profile active.",
          "parameters": [
            {
              "name": "user_id",
              "in": "header",
              "required": true,
              "style": "simple",
              "explode": false,
              "schema": {
                "type": "string",
                "format": "uuid"
              }
            }
          ],
          "responses": {
            "201": {
              "description": "Access granted"
            },
            "400": {
              "description": "Unauthorized"
            }
          }
        }
      },
  
      "/users/{id}": {
        "get": {
          "tags": ["Users"],
          "summary": "Get user by UUID",
          "description": "It returns the user if it exists.",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "style": "simple",
              "explode": false,
              "schema": {
                "type": "string",
                "format": "uuid"
              }
            }
          ],
          "responses": {
            "201": {
              "description": "Access granted"
            },
            "404": {
              "description": "User not found"
            }
          }
        }
      },
  
      "/users/{id}/admin": {
        "patch": {
          "tags": ["Users"],
          "summary": "Turn user into Admin",
          "description": "Makes the user an admin if it exists.",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "style": "simple",
              "explode": false,
              "schema": {
                "type": "string",
                "format": "uuid"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Updated"
            },
            "404": {
              "description": "User not found"
            }
          }
        }
      }
    },
  
    "components": {
      "schemas": {
        "body": {
          "required": ["email", "name"],
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "email": {
              "type": "string"
            }
          },
          "example": {
            "name": "Jane Doe",
            "email": "jane@doe.com"
          }
        }
      }
    }
  }